---
// Hero section component
---

<section id='hero' class='relative min-h-screen flex items-center justify-center overflow-hidden pt-16'>
	<!-- Background -->
	<div class='absolute inset-0'>
		<img
			src='/hero/background.webp'
			alt='In Thorns'
			class='w-full h-full object-cover'
		/>
		<div class='absolute inset-0 bg-gradient-to-b from-black/80 via-black/50 to-black'></div>
		<!-- Film grain overlay -->
		<div class='absolute inset-0 opacity-30 mix-blend-overlay' style='background-image: url(/itbg.gif); background-size: cover;'></div>
	</div>

	<!-- Content -->
	<div class='relative z-10 text-center px-4 max-w-4xl'>
		<img id='hero-logo' src='/it-logo-white.png' alt='In Thorns' class='w-full max-w-2xl mx-auto mb-8 transition-all duration-500' />
		<h1 class='text-3xl md:text-5xl lg:text-6xl mb-6 tracking-wider text-ew-cream'>
			Let's Sail into the Unknown
		</h1>

		<!-- Exit Wounds Announcement -->
		<div class='inline-block bg-ew-orange/20 border-2 border-ew-orange px-8 py-4 backdrop-blur-sm'>
			<p class='text-ew-orange text-sm uppercase tracking-widest mb-2'>New Single</p>
			<p class='text-2xl md:text-3xl font-bold text-white'>Exit Wounds</p>
			<p class='text-ew-cream mt-2'>Out 23.1.2025</p>
		</div>

		<!-- Scroll indicator -->
		<div class='mt-16'>
			<a href='#music' class='inline-block text-ew-orange animate-bounce'>
				<svg class='w-8 h-8' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
					<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M19 14l-7 7m0 0l-7-7m7 7V3'></path>
				</svg>
			</a>
		</div>
	</div>
</section>
