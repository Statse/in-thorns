---
// Hero section component
import { Image } from 'astro:assets'
---

<section id='hero' class='relative min-h-screen flex items-center justify-center overflow-hidden pt-16'>
	<!-- Background -->
	<div class='absolute inset-0' aria-hidden='true'>
		<Image
			src='/hero/background.webp'
			alt=''
			width={1920}
			height={1080}
			class='w-full h-full object-cover'
			loading='eager'
			decoding='async'
		/>
		<div class='absolute inset-0 bg-gradient-to-b from-black/80 via-black/50 to-black'></div>
		<!-- Film grain overlay -->
		<div class='absolute inset-0 opacity-30 mix-blend-overlay' style='background-image: url(/itbg.gif); background-size: cover;'></div>
	</div>

	<!-- Content -->
	<div class='relative z-10 text-center px-4 max-w-4xl'>
		<Image id='hero-logo' src='/it-logo-white.png' alt='In Thorns' width={800} height={200} class='w-full max-w-2xl mx-auto mb-8 transition-all duration-500' loading='eager' />
		<h1 class='text-3xl md:text-5xl lg:text-6xl mb-6 tracking-wider text-ew-cream'>
			The pain won't cease
		</h1>

		<!-- Exit Wounds Announcement -->
		<div class='inline-block bg-ew-orange/20 border-2 border-ew-orange px-8 py-4 backdrop-blur-sm'>
			<p class='text-ew-orange text-sm uppercase tracking-widest mb-2'>New Single</p>
			<p class='text-2xl md:text-3xl font-bold text-white'>exit wounds</p>
			<p class='text-ew-cream mt-2 mb-4'>Out now</p>
			<a
				href='https://distrokid.com/hyperfollow/inthorns/exit-wounds'
				target='_blank'
				rel='noopener noreferrer'
				class='inline-block bg-ew-green hover:bg-ew-green-light text-white px-6 py-2 transition-colors text-sm uppercase tracking-wider'
			>
				Listen Now!
			</a>
		</div>

		<!-- Scroll indicator -->
		<div class='mt-16'>
			<a href='#music' aria-label='Scroll down to music section' class='inline-block text-ew-orange animate-bounce'>
				<svg class='w-8 h-8' fill='none' stroke='currentColor' viewBox='0 0 24 24' aria-hidden='true'>
					<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M19 14l-7 7m0 0l-7-7m7 7V3'></path>
				</svg>
			</a>
		</div>
	</div>
</section>
