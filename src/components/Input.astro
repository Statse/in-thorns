---
type Props = {
  type:
    | 'button'
    | 'checkbox'
    | 'color'
    | 'date'
    | 'datetime-local'
    | 'email'
    | 'file'
    | 'hidden'
    | 'image'
    | 'month'
    | 'number'
    | 'password'
    | 'radio'
    | 'range'
    | 'reset'
    | 'search'
    | 'submit'
    | 'tel'
    | 'text'
    | 'time'
    | 'url'
    | 'week'
    | null
    | undefined
  name: string
  id: string
}

const { type, id, name, ...remainingProps } = Astro.props
---

<input
  type={type}
  name={name}
  id={id}
  {...remainingProps}
  class='border-2 border-white w-full flex items-center px-2 font-khmer text-2xl text-black'
/>
