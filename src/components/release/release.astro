---
import ReleaseImage from './releaseImage.astro'
---

<section>
  <div
    class='md:py-16 flex flex-col md:flex-row justify-center items-center text-black bg-gray-50'
  >
    <ReleaseImage src='/releases/cb_cover.jpg' />
    <div class='p-8 flex flex-col gap-8'>
      <h3 class='text-4xl font-bold'>colorblind</h3>
      <iframe
        style='border-radius:12px'
        src='https://open.spotify.com/embed/track/3Su7YwiekjNZ1wh9SgwhG3?utm_source=generator&theme=0'
        width='100%'
        height='152'
        allowfullscreen=''
        allow='autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture'
        loading='lazy'></iframe>
    </div>
  </div>
  <div
    class='md:py-16 lg:px-32 flex flex-col md:flex-row justify-center items-center text-white bg-black'
  >
    <ReleaseImage src='/releases/xiii_cover.jpeg' />
    <div class='p-8 flex flex-col gap-8'>
      <h3 class='text-4xl font-bold'>XIII (the death)</h3>
      <iframe
        style='border-radius:12px'
        src='https://open.spotify.com/embed/track/4J6FHNMCauKhyJ5WBchgdx?utm_source=generator&theme=0'
        width='100%'
        height='152'
        allowfullscreen=''
        allow='autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture'
        loading='lazy'></iframe>
    </div>
  </div>
</section>
