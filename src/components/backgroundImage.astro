---
interface Props {
  src: string
}

const { src } = Astro.props
---

<style>
  .bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  .bg-img-container {
    z-index: -1;
    position: absolute;
    mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 1) 0%,
      transparent 100%
    );
  }
</style>

<div class='bg-img-container'>
  <img src={src} class='bg-img' />
</div>
