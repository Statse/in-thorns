---
import PhotoItem from './components/photo-item.astro'

import photo1 from './assets/3E30015C-F774-41CB-A41E-FCBBF2606004.webp'
import photo2 from './assets/455A8D0B-D5E4-4E9C-8002-D06F2E7D87E7.webp'
import photo3 from './assets/5F0E6E7C-210E-453A-9008-48B415987CF8.webp'
import photo4 from './assets/6AE5AA53-E14B-4437-AC9E-A19D624213BC.webp'
import photo5 from './assets/A382B952-B517-48B9-B466-7A252ED22616.webp'
import photo6 from './assets/B22BB973-351E-4D26-8A3C-067E8F1059B3.webp'
import photo7 from './assets/D068D024-DAC5-4C38-A951-403E822B0797.webp'
import photo8 from './assets/DA93CD43-944B-4EF9-8AC8-5B33C4DE2171.webp'
---

<section id='photos' class='min-h-screen bg-black py-20 px-4'>
	<div class='container mx-auto max-w-7xl'>
		<h2 class='text-4xl md:text-5xl font-bold text-ew-orange mb-16 text-center'>
			<span class='inline-block' style='text-shadow: 0 0 20px rgba(255, 107, 53, 0.5);'>Photos</span>
		</h2>

		<div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4'>
			<PhotoItem id='1' src={photo1.src} alt='In Thorns - Exit Wounds' colorClass='ew-orange' />
			<PhotoItem id='2' src={photo2.src} alt='In Thorns - Exit Wounds' colorClass='ew-green' />
			<PhotoItem id='3' src={photo3.src} alt='In Thorns - Exit Wounds' colorClass='ew-orange' />
			<PhotoItem id='4' src={photo4.src} alt='In Thorns - Exit Wounds' colorClass='ew-red' />
			<PhotoItem id='5' src={photo5.src} alt='In Thorns - Exit Wounds' colorClass='ew-green' />
			<PhotoItem id='6' src={photo6.src} alt='In Thorns - Exit Wounds' colorClass='ew-orange' />
			<PhotoItem id='7' src={photo7.src} alt='In Thorns - Exit Wounds' colorClass='ew-red' colspan={true} />
			<PhotoItem id='8' src={photo8.src} alt='In Thorns - Exit Wounds' colorClass='ew-green' />
		</div>
	</div>
</section>
