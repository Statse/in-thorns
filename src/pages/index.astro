---
import Layout from '../layouts/Layout.astro'
---

<Layout title='Sail into the unknown.'>
  <main>
    <div class='noise'></div>
    <div class='screen flex flex-col'>
      <div class='play-container flex space-between'>
        <p class='white'>STOP</p>
        <p class='white'>--:--</p>
        <p class='white'>CH 003</p>
      </div>
      <div
        class='flex flex-row w-full gap-4 bg-transparent mt-auto items-center justify-center pb-8'
      >
        <a href='https://www.instagram.com/inxthorns/'
          ><img src='ig.png' class='w-12' /></a
        >
        <a
          href='https://open.spotify.com/artist/4b0Yziy8xm1VtefVI9ri2d?si=W41OIFdzQ5io5Lr0VZanwQ'
          ><img src='spotify.png' class='w-12' /></a
        >
        <a href='https://www.youtube.com/@inthornsband'
          ><img src='yt.png' class='w-12' /></a
        >
        <a href='https://www.facebook.com/inthorns'
          ><img src='fb.png' class='w-12' /></a
        >
      </div>
    </div>
  </main>
</Layout>

<style is:global>
  @font-face {
    font-family: 'VCR';
    src: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/225473/VCR_OSD_MONO_1.001.ttf');
    font-weight: normal;
    font-style: normal;
  }

  * {
    box-sizing: border-box;
  }

  .flex {
    display: flex;
  }
  .space-between {
    justify-content: space-between;
  }

  .white {
    color: #ffffff;
    filter: blur(0.4px);
    animation: 0.1s infinite linear glitch;
    text-shadow: 0px 0px 3px #333333;
  }

  .red {
    color: #a30901;
    top: 5px;
    left: 15px;
  }
  .pink {
    color: #d50bcf;
  }
  .dark-blue {
    color: #31e3e7;
  }
  .cyan {
    color: #31e3e7;
  }
  .green {
    color: #51bb13;
  }
  .gold {
  }

  .absolute {
    position: absolute;
  }

  html {
    /* Display & Box Model */
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    overflow: hidden;

    /* Other */
    background-color: #0c0c0c;
  }

  .screen {
    /* Display & Box Model */
    width: 80vw;
    height: 100vh;
    padding: 8px 10vw;

    /* Positioning */
    position: relative;
    z-index: 2;

    /* Other */
    font-family: 'VCR', monospace;
    font-size: 42px;
    background-image: url('/xii_\(the_death\).jpg');
  }

  .play-container {
    animation: 3s infinite linear glitch-vertical;
  }

  @keyframes glitch {
    0% {
      transform: translateX(0px);
    }
    25% {
      transform: translateX(-0.5px);
    }
    50% {
      transform: translateX(0px);
    }
    75% {
      transform: translateX(0.5px);
    }
    100% {
      transform: translateX(0px);
    }
  }

  @keyframes glitch-vertical {
    0% {
      transform: translateY(0px);
    }
    49% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-13px);
    }
    51% {
      transform: translateY(0px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .noise {
    position: absolute;
    width: 80vh;
    height: 80vh;
    background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/225473/img-noise-361x370.png');
  }
</style>
