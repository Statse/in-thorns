---
import Layout from '@/layouts/Layout.astro'
import Menu from '@/components/menu.astro'
---

<Layout title='Sail into the unknown.'>
  <main
    class='m-4 border-white text-white border-2 flex flex-grow flex-col w-auto h-auto bg-no-repeat bg-center bg-cover bg-opacity-50 relative'
    style='background-image:  url(candles.jpg);'
  >
    <Menu />
    <section
      class='flex flex-col gap-4 px-4 w-full h-auto flex-grow justify-center items-center'
    >
      <div class='flex flex-col bg-black text-white w-auto sm:w-96'>
        Debut album Last bead on a song of cords available now!
        <img src='TLBOACOS.jpg' class='h-auto w-full' />
      </div>
    </section>
  </main>
</Layout>
