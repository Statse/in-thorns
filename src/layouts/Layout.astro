---
import { ClientRouter, fade, slide } from 'astro:transitions'
import SpeedInsights from '@vercel/speed-insights/astro'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content="Let's sail into the unknown" />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body
    class='bg-black min-h-screen w-screen flex flex-col font-koulen'
    transition:animate='fade'
  >
    <style>
      * {
        font-family: simsun, times, serif;
        font-weight: 800;
      }
    </style>
    <slot />
    <SpeedInsights />
  </body>
</html>
