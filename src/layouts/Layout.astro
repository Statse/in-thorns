---
import { ClientRouter, fade, slide } from 'astro:transitions'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content="Let's sail into the unknown" />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body
    class='bg-black min-h-screen w-screen flex flex-col font-koulen'
  >
    <a href='#main-content' class='sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 focus:z-[100] focus:bg-ew-orange focus:text-black focus:px-4 focus:py-2'>
      Skip to main content
    </a>
    <style>
      * {
        font-family: simsun, times, serif;
        font-weight: 800;
      }
      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
      }
      /* Enhanced keyboard focus states for accessibility */
      a:focus-visible,
      button:focus-visible {
        outline: 2px solid #ff6b35;
        outline-offset: 2px;
      }
      /* Ensure focus is visible even with Tailwind's focus classes */
      *:focus-visible {
        outline: 2px solid #ff6b35;
        outline-offset: 2px;
      }
    </style>
    <slot />
  </body>
</html>
